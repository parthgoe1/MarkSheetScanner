<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".ExamTypeActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="16dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:id="@+id/courseTextdisplay"/>

        <TextView
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            android:textColor="@color/editorColorPrimaryDark"
            android:textAlignment="center"

            android:textStyle="bold"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"
            android:text="Enter Exam Type"
            android:layout_margin="15dp"/>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"
            android:hint="eg. End Sem"
            android:id="@+id/examType"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="@color/editorColorPrimaryDark"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="Enter Section"/>

        <EditText
            android:id="@+id/sectionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="eg. A"
             />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Save >"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/button_text"
            android:background="@drawable/rounded_edge_bittons"
            android:padding="10dp"
            android:id="@+id/examTypeSave"/>


    </LinearLayout>





</ScrollView>